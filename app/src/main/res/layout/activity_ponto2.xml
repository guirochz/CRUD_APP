<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ponto"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F8F6F6"
        android:textColorHint="#ECE4E4"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Ponto Av. Henriqueta Mendes Guerra"
        android:textColor="#101010"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        />

    <View
        android:id="@+id/containerComponents3"
        style="@style/ContainerComponents2"
        android:layout_width="390dp"
        android:layout_height="440dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView9" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:text="1º parada:"
        android:textColor="#FBF6F6"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/containerComponents3"
        app:layout_constraintTop_toTopOf="@+id/containerComponents3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="Avenida Henriqueta Mendes Guerra, 252"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="160dp"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents3"
        app:layout_constraintStart_toStartOf="@+id/containerComponents3"
        app:layout_constraintTop_toTopOf="@+id/containerComponents3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEP: 06401-160"
        android:textColor="#F3F0F0"
        android:textSize="20sp"
        android:layout_marginStart="85dp"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents3"
        app:layout_constraintStart_toStartOf="@+id/containerComponents3"
        app:layout_constraintTop_toBottomOf="@+id/textView11"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Referência: Centro de especialidades"
        android:textColor="#F3F0F0"
        android:textSize="20sp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="140dp"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents3"
        app:layout_constraintStart_toStartOf="@+id/containerComponents3"
        app:layout_constraintTop_toBottomOf="@+id/textView12"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:text="2º parada:"
        android:textColor="#FBF6F6"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="240dp"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents3"
        app:layout_constraintStart_toStartOf="@+id/containerComponents3"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="Av. Henriqueta Mendes Guerra, 556"
        android:textColor="#F6F6F6"
        android:textSize="20sp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="160dp"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents3"
        app:layout_constraintStart_toStartOf="@+id/containerComponents3"
        app:layout_constraintTop_toBottomOf="@+id/textView12"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEP: 06401-160"
        android:textColor="#FFFCFC"
        android:textSize="20sp"
        android:layout_marginStart="85dp"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents3"
        app:layout_constraintStart_toStartOf="@+id/containerComponents3"
        app:layout_constraintTop_toBottomOf="@+id/textView14"/>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Referência: Ganha Tempo"
        android:textColor="#F3F0F0"
        android:textSize="20sp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="140dp"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents3"
        app:layout_constraintStart_toStartOf="@+id/containerComponents3"
        app:layout_constraintTop_toBottomOf="@+id/textView15"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/ic_home3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="abrindo_perfil"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="320dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_user" />

        <ImageView
            android:id="@+id/ic_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="abrindo_home"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_home" />

        <ImageView
            android:id="@+id/ic_home2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="abrindo_favoritos"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="181dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_heart" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>